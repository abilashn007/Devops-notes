<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
    <display-name>Calculator Web</display-name>
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>Calculator Service</servlet-name>
        <servlet-class>java.com.harsha.calculator.CalculatorService</servlet-class>
        <!-- Register resources and providers under com.qianhong package. -->
    </servlet>
    <servlet-mapping>
        <servlet-name>Calculator Service</servlet-name>
        <url-pattern>/calculator</url-pattern>
    </servlet-mapping>
</web-app>
